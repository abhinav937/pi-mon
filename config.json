{
  "project": {
    "name": "Pi Monitor",
    "version": "2.0.0",
    "description": "Simple Raspberry Pi monitoring system",
    "author": "Pi Monitor Team"
  },
  "backend": {
    "python_version": "3.11",
    "dependencies": ["psutil==5.9.6"],
    "endpoints": {
      "root": "/",
      "health": "/health",
      "version": "/api/version",
      "auth": "/api/auth/token",
      "system": "/api/system",
      "metrics": "/api/metrics",
      "system_info": "/api/system/info",
      "services": "/api/services",
      "power": "/api/power"
    },
    "features": {
      "system_monitoring": true,
      "service_management": true,
      "power_management": true,
      "authentication": true,
      "cors": true,
      "real_time_metrics": true,
      "historical_data": true,
      "temperature_monitoring": true,
      "disk_io_monitoring": true,
      "network_monitoring": true
    }
  },
  "frontend": {
    "framework": "React",
    "build_tool": "npm",
    "production_port": 3000
  },
  "monitoring": {
    "system_metrics": [
      "cpu_percent",
      "memory_percent",
      "disk_percent",
      "temperature",
      "uptime",
      "network_stats"
    ],
    "common_services": [
      "ssh",
      "nginx",
      "apache2",
      "mosquitto"
    ],
    "update_interval": "5.0",
    "configurable_intervals": [
      "2 seconds",
      "5 seconds",
      "10 seconds",
      "30 seconds",
      "1 minute"
    ],
    "data_retention_days": 7,
    "max_history_points": 20000,
    "time_ranges": [
      "1 hour (30-min intervals)",
      "6 hours (3-hour intervals)",
      "12 hours (3-hour intervals)",
      "24 hours (6-hour intervals)"
    ]
  },
  "security": {
    "authentication": {
      "type": "token_based",
      "expiration_hours": 24,
      "storage": "in_memory"
    },
    "cors": {
      "enabled": true,
      "origins": ["*"],
      "methods": ["GET", "POST", "OPTIONS"],
      "headers": ["Content-Type", "Authorization"]
    }
  },
  "urls": {
    "local": {
      "backend": "http://localhost:80",
      "frontend": "http://localhost:3000",
      "health": "http://localhost:80/health"
    },
    "production": {
      "backend": "https://pi.cabhinav.com",
      "frontend": "https://pi.cabhinav.com",
      "health": "https://pi.cabhinav.com/health",
      "api_base": "https://pi.cabhinav.com"
    }
  },
  "deployment_defaults": {
    "domain": "pi.cabhinav.com",
    "api_key": "pi-monitor-api-key-2024",
    "env": "production",
    "production_url": "https://pi.cabhinav.com",
    "nginx_port": "80",
    "backend_port": "80"
  },
  "cloudflare": {
    "enable": true,
    "hostname": "pi.cabhinav.com",
    "tunnel_name": "pi-monitor",
